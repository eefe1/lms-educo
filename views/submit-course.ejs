<div class="px-4 py-5 text-center">
  <h1 class="display-5 fw-bold">Submit Your Course</h1>
  <div class="col-lg-6 mx-auto">
    <p class="lead">Share Your Course Content</p>
  </div>
</div>


<!--Form-->
<div class="row justify-content-center">

  <% if(infoSubmitObj != ''){ %>
    <div class="col-8 alert alert-success" role="alert">
      <%= infoSubmitObj %>
    </div>
    <% } %>

    <% if(infoErrorsObj != ''){ %>
      <div class="col-8 alert alert-danger" role="alert">
        <%= infoErrorsObj[0].message %>
      </div>
      <% } %>

  <div class="col-8">
    <form action="/submit-course" enctype="multipart/form-data" method="POST">
      <div class="row g-3">


        <div class="col-12">
          <label for="name" class="form-label">Title</label>
          <input type="text" name="name" id="name" class="form-control" required/>
        </div>

        <div class="col-12">
          <label for="description" class="form-label">Description/Course Content</label>
          <textarea
            name="description"
            id="description"
            class="form-control"
            cols="30"
            rows="16"
          ></textarea>
        </div>

        <div class="col-12">
          <label for="name" class="form-label">Tag/Content</label><br />
          <small>Example: SQL</small>
          <div class="contentList">
            <div class="contentDiv mb-1">
              <input type="text" name="content"  />
            </div>
          </div>
        </div>

        <div class="col-12">
          <button
            type="button"
            class="btn btn-outline-primary"
            id="addContentsBtn"
            
          >
            + Content
          </button>
        </div>

        <div class="col-12">
          <label for="paths">Select Path</label>
          <select
            class="form-select form-control"
            name="paths"
            aria-label="Paths"
          >
            <option selected>Select Path</option>
            <option value="JS">JS</option>
            <option value="Node">Node</option>
            <option value="CSS">CSS</option>
            <option value="Express">Express</option>
            <option value="Database">Database</option>
          </select>
        </div>

        <div class="col-12">
          <label for="image">Product Image</label>
          <input
            type="file"
            class="form-control"
            name="image"
            accept="image/*"
            
          />
        </div>

        <div class="col-12">
          <button type="submit" class="btn btn-primary">Submit Course</button>
        </div>
      </div>
    </form>
  </div>
</div>
