<h1 class="pb-4">Explore Paths</h1>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item"><a href="/paths">Paths</a></li>
    <li class="breadcrumb-item active" aria-current="page">
      Explore Paths
    </li>
  </ol>
</nav>

<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3 mb-4">
<% if(typeof paths !== 'undefined' && paths.lenght >0){ %> 
<% paths.forEach(function(path, index){%>
<a href="/paths" class="col text-center category__link">
  <div class="category__img shadow">
    <img src="img/<%-path.image%>" alt="<%-path.name%>" loading="lazy" />
  </div>
  <div class="pt-1"><%-path.name%></div>
</a>
<% })%> <% }%>
</div>



<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
  <% if(typeof pathById !== 'undefined' && pathById.length >0){ %> 
    <% pathById.forEach(function(course, index){ %>

  <a href="/course/<%= course._id %>" class="col text-center category__link">
    <div class="category__img category__img--large shadow">
      <img
        src="../public/uploads/<%= course._image %>"
        alt="<%= course.name %>"
        loading="lazy"
      />
    </div>
    <div class="pt-1"><%= course.name %></div>
  </a>
  <% });%> 
  <% } else { %>
  <p>No Items Found.</p>
  <% } %>
</div>